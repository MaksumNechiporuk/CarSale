@model EditProfileViewModel
@{
    ViewBag.Title = "Edit profile";
}

<div class="profile">
    <hr />
    <div class="container">
        <form enctype="multipart/form-data"
              class="form"
              asp-controller="Profile"
              asp-action="Edit"
              method="post">
            <input hidden asp-for="Id" />
            <input hidden asp-for="ExistImgPath" />
            <div class="row">
                <div class="col-sm-3">
                    <div class="text-center">
                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png"
                             class="avatar img-circle img-thumbnail"
                             alt="avatar" />
                        <h6>Upload a different photo...</h6>
                        <input type="file"
                               asp-for="Img"
                               class="text-center center-block file-upload"
                               accept=".png,.jpg,.jpeg,.gif,.tif" />
                    </div>
                    <br />
                </div>

                <div class="col-sm-9">
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label asp-for="Email"><h4>Email</h4></label>
                            <input asp-for="Email"
                                   type="text"
                                   class="form-control"
                                   placeholder="Email"
                                   title="Enter your new Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label asp-for="Password"><h4>Password</h4></label>
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control"
                                   placeholder="Password"
                                   title="Enter your new Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label asp-for="ConfirmPassword"><h4>Confirm password</h4></label>
                            <input asp-for="ConfirmPassword"
                                   type="password"
                                   class="form-control"
                                   placeholder="Confirm Password"
                                   title="Enter your Password" />
                            <span asp-validation-for="ConfirmPassword"
                                  class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label asp-for="Country"><h4>Country</h4></label>
                            <input asp-for="Country"
                                   type="text"
                                   class="form-control"
                                   placeholder="Country"
                                   title="Enter your Country" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label asp-for="City"><h4>City</h4></label>
                            <input asp-for="City"
                                   type="text"
                                   class="form-control"
                                   placeholder="City"
                                   title="Enter yourCity" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>


                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <br />
                            <button class="btn_Save"
                                    type="submit"
                                    onclick="return confirm('Are you sure?')">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>

                                Save
                            </button>
                            <button class="btn_Reset" type="reset">
                                <i class="fa fa-refresh" aria-hidden="true"></i>
                                Reset
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <hr />
</div>
